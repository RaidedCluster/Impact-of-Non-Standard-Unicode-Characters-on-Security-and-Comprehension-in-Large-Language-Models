def convert_greek_to_styled(text, style):
    greek_chars = "Î‘Î’Î“Î”Î•Î–Î—Î˜Î™ÎšÎ›ÎœÎÎÎŸÎ Î¡Î£Î¤Î¥Î¦Î§Î¨Î©Î±Î²Î³Î´ÎµÎ¶Î·Î¸Î¹ÎºÎ»Î¼Î½Î¾Î¿Ï€ÏÏƒÏ„Ï…Ï†Ï‡ÏˆÏ‰Ï‚"

    styled_chars = {
        'Bold': "ğš¨ğš©ğšªğš«ğš¬ğš­ğš®ğš¯ğš°ğš±ğš²ğš³ğš´ğšµğš¶ğš·ğš¸ğšºğš»ğš¼ğš½ğš¾ğš¿ğ›€ğ›‚ğ›ƒğ›„ğ›…ğ›†ğ›‡ğ›ˆğ›‰ğ›Šğ›‹ğ›Œğ›ğ›ğ›ğ›ğ›‘ğ›’ğ›”ğ›•ğ›–ğ›—ğ›˜ğ›™ğ›šğ›“",
        'Italic': "ğ›¢ğ›£ğ›¤ğ›¥ğ›¦ğ›§ğ›¨ğ›©ğ›ªğ›«ğ›¬ğ›­ğ›®ğ›¯ğ›°ğ›±ğ›²ğ›´ğ›µğ›¶ğ›·ğ›¸ğ›¹ğ›ºğ›¼ğ›½ğ›¾ğ›¿ğœ€ğœğœ‚ğœƒğœ„ğœ…ğœ†ğœ‡ğœˆğœ‰ğœŠğœ‹ğœŒğœğœğœğœ‘ğœ’ğœ“ğœ”ğœ",
        'Bold Italic': "ğœœğœğœğœŸğœ ğœ¡ğœ¢ğœ£ğœ¤ğœ¥ğœ¦ğœ§ğœ¨ğœ©ğœªğœ«ğœ¬ğœ®ğœ¯ğœ°ğœ±ğœ²ğœ³ğœ´ğœ¶ğœ·ğœ¸ğœ¹ğœºğœ»ğœ¼ğœ½ğœ¾ğœ¿ğ€ğğ‚ğƒğ„ğ…ğ†ğˆğ‰ğŠğ‹ğŒğğğ‡",
        'Sans-Serif Bold': "ğ–ğ—ğ˜ğ™ğšğ›ğœğğğŸğ ğ¡ğ¢ğ£ğ¤ğ¥ğ¦ğ¨ğ©ğªğ«ğ¬ğ­ğ®ğ°ğ±ğ²ğ³ğ´ğµğ¶ğ·ğ¸ğ¹ğºğ»ğ¼ğ½ğ¾ğ¿ğ€ğ‚ğƒğ„ğ…ğ†ğ‡ğˆğ",
        'Sans-Serif Bold Italic': "ğğ‘ğ’ğ“ğ”ğ•ğ–ğ—ğ˜ğ™ğšğ›ğœğğğŸğ ğ¢ğ£ğ¤ğ¥ğ¦ğ§ğ¨ğªğ«ğ¬ğ­ğ®ğ¯ğ°ğ±ğ²ğ³ğ´ğµğ¶ğ·ğ¸ğ¹ğºğ¼ğ½ğ¾ğ¿ğŸ€ğŸğŸ‚ğ»"
    }

    char_map = str.maketrans(greek_chars, styled_chars[style])

    return text.translate(char_map)


text ="""
Î“ÎµÎ¹Î±
"""

styles = ['Bold', 'Italic', 'Bold Italic', 'Sans-Serif Bold', 'Sans-Serif Bold Italic']

styled_texts = {style: convert_greek_to_styled(text, style) for style in styles}
print(styled_texts)
